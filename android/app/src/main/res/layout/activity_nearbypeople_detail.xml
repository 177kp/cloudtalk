<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contact_category_title_bk"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_scanresult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text=""
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_showdetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <com.zhangwuji.im.ui.widget.IMBaseImageView
            android:id="@+id/new_header"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/group_default"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="名字"/>

            <ImageView
                android:id="@+id/iv_sexs"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_names"
                android:src="@drawable/userinfo_female"/>

            <TextView
                android:id="@+id/tv_diatances"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/line"
                android:layout_below="@id/tv_names"
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:text="100米"/>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47.5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:text=""
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/emo_bk_color"
        android:layout_marginTop="20dp">
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="47.5dp"
        android:background="@drawable/btn_list_item_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:text="地区        "
            android:textColor="@color/gray_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:text="湖南 长沙"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_fragment_bk_color"
        android:layout_marginLeft="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47.5dp"
        android:background="@drawable/btn_list_item_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:text="个性签名"
            android:textColor="@color/gray_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_signs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:text=""
            android:maxLength="15"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_fragment_bk_color"
            android:layout_marginLeft="16dp"/>

        <RelativeLayout
            android:id="@+id/rl_npersonalbum"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/btn_list_item_bg"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="个人相册"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/gray_text"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_albumss"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@id/tv_photo"
                android:layout_marginLeft="18dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:src="@drawable/tt_default_user_portrait_corner"/>

            <ImageView
                android:layout_width="14dp"
                android:layout_height="19dp"
                android:background="@drawable/jiantou"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
                 android:visibility="gone"
            android:background="@color/default_fragment_bk_color"
            android:layout_marginLeft="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47.5dp"
            android:background="@drawable/btn_list_item_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:text="来源        "
                android:textColor="@color/gray_text"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:text="来自附近的人"
                android:maxLength="15"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fromtype"
        android:layout_width="match_parent"
        android:layout_height="47.5dp"
        android:background="@drawable/btn_list_item_bg"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:text="来源        "
            android:textColor="@color/gray_text"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:text="来自扫一扫"
            android:maxLength="15"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_chats"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/contact_start_chat"
        android:text="发起聊天"
        android:textColor="#FFF"
        android:visibility="gone"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bt_addfriend"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/contact_start_chat"
        android:text="加为好友"
        android:textColor="#FFF"
        android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>