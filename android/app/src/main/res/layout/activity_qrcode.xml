<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_backgroud"
    tools:context=".ui.activity.QRCodeActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="480dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/white"
        android:padding="30dp">


        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:src="@drawable/retry"/>

        <LinearLayout
            android:id="@+id/line_person"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_above="@+id/iv_qrcode"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_person"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/default_person"/>

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nickname"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:layout_below="@+id/iv_qrcode"
            android:layout_centerHorizontal="true"
            android:text="扫一扫上面的二维码图案，添加好友"/>

        <TextView
            android:id="@+id/my_tuijian_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/gray_text"
            android:textSize="17sp"
            android:layout_below="@+id/iv_qrcode"
            android:layout_centerHorizontal="true"
            android:text=""/>
    </RelativeLayout>


</RelativeLayout>