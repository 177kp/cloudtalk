<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_fragment_bk_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/tt_page_item_bk"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:padding="15dp"
                android:text="加好友启用问题验证"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/cb_add_friend_ask"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="18dp"
                android:button="@color/toggle_checkbox_background"
                android:text=""
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_ask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:visibility="gone"
            android:orientation="vertical" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入验证问题"
                android:layout_marginLeft="10dp"
                android:textColor="@color/message_time_color" />
            <EditText
                android:hint="请输入问题答案"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/message_time_color" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>