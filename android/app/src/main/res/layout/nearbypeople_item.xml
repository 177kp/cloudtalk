<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="8dp">
    <RelativeLayout
        android:id="@+id/nearbyitem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_list_item_bg"
        android:orientation="horizontal">


        <com.zhangwuji.im.ui.widget.IMBaseImageView
            android:id="@+id/new_header"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            />


<LinearLayout
    android:id="@+id/maincontent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_toRightOf="@id/new_header">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLength="32"
            android:textColor="#353535"
            android:textSize="15sp"
            android:text="名字"/>

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/userinfo_female" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="不限"
            android:textColor="@color/fense"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_isfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="10sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp">
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="0.5km"
            android:textSize="11sp"
            android:textColor="@color/gray_word"/>
    </LinearLayout>
 </LinearLayout>


 <TextView
            android:id="@+id/tv_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="这个家伙特别懒"
            android:textColor="@color/gray_word"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxWidth="100dp"
            android:maxLength="30"
            android:background="@drawable/textview_corner"
            android:textSize="10sp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_online"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="离线"
            android:textColor="@color/gray_word"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="15dp"
            android:textSize="13sp"/>

    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="16dp"
        android:background="#ccc"
        android:layout_marginTop="8dp"/>

</LinearLayout>